model articles {
  articles_id    String          @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  content        String          @db.Text
  image_url      String?         @db.VarChar(255)
  published_date DateTime?       @default(now()) @db.Date
  admin_id       String?         @db.Uuid
  // category_id    String?   @db.Uuid
  title          String          @db.VarChar(255)
  slug           String?         @unique @db.VarChar(255)
  status         status?         @default(DRAFT)
  admin          admin?          @relation(fields: [admin_id], references: [admin_id], onUpdate: NoAction, map: "fk_admin")
  articlesTags   articles_tags[]
  tagsId         String?         @db.Uuid

  @@index([admin_id], map: "idx_articles_admin")
  @@index([published_date], map: "idx_articles_published_date")
}

model articles_tags {
  articles_id String @db.Uuid
  tag_id      String @db.Uuid

  articles articles @relation(fields: [articles_id], references: [articles_id], onDelete: Cascade, onUpdate: NoAction, map: "fk_articles_tags_articles")
  tags     tags     @relation(fields: [tag_id], references: [id], onDelete: Restrict, onUpdate: NoAction, map: "fk_articles_tags_tags")

  @@id([articles_id, tag_id], map: "pk_articles_tags")
  @@index([tag_id], map: "idx_articles_tags_tag")
}

model tags {
  id   String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name String @db.VarChar(255)
  slug String @unique @db.VarChar(255)

  articlesTags articles_tags[]
}

model guru {
  guru_id          String             @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name             String             @db.VarChar(255)
  jabatan          String             @db.VarChar(255)
  image_url        String?            @db.VarChar(255)
  nip              String?            @db.VarChar(255)
  mata_pelajaran   String?            @db.VarChar(255)
  extracurriculars extracurriculars[]
  major_id         String?            @db.Uuid
  major            majors?            @relation(fields: [major_id], references: [id], onUpdate: NoAction, map: "fk_major")
}

model facilities {
  id          String            @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name        String            @db.VarChar(255)
  image_url   String?           @db.VarChar(255)
  description String?           @db.Text
  location    String?           @db.VarChar(255)
  status      status_facilities @default(TERSEDIA)
}

model majors {
  id                   String                 @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name                 String                 @db.VarChar(255)
  description          String?                @db.Text
  image_url            String?                @db.VarChar(255)
  guru                 guru[]
  major_gallery_images major_gallery_images[]
}

model major_gallery_images {
  id        String  @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  major_id  String  @db.Uuid
  title     String? @db.VarChar(255)
  image_url String? @db.VarChar(255)
  major     majors  @relation(fields: [major_id], references: [id], onUpdate: Cascade, map: "fk_major_gallery_images")
}

model announcements {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  title     String   @db.VarChar(255)
  content   String   @db.Text
  date      DateTime @default(now()) @db.Date
  image_url String?  @db.VarChar(255)
  status    status   @default(DRAFT)
}

model extracurriculars {
  id          String  @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name        String  @db.VarChar(255)
  image_url   String? @db.VarChar(255)
  description String? @db.Text
  guru_id     String? @db.Uuid
  guru        guru?   @relation(fields: [guru_id], references: [guru_id], onUpdate: NoAction, map: "fk_guru")
}

model slides {
  id           String  @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  image_url    String? @db.VarChar(255)
  alt          String  @db.VarChar(255)
  title        String  @db.VarChar(255)
  subtitle     String  @db.VarChar(255)
  description  String  @db.VarChar(255)
  gradientFrom String  @db.VarChar(255)
  gradientTo   String  @db.VarChar(255)
  order        Int
  isActive     Boolean @default(true)
}

model achievements {
  id          String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  title       String   @db.VarChar(255)
  publishDate DateTime @default(now())
  description String   @db.Text
  content     String   @db.Text
  image_url   String?  @db.VarChar(255)
}

enum status_facilities {
  TERSEDIA
  PERBAIKAN
  DIGUNAKAN
  TIDAK_TERSEDIA
}

enum status {
  DRAFT
  PUBLISHED
}
